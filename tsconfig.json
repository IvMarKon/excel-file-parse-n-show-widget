{
    "compilerOptions": {
        "target": "ES6",
        "diagnostics": true,
        "noImplicitThis": true,
        "noEmitOnError": true,
        "allowJs": true,
        "lib": ["es5", "es6", "dom"],
        "importHelpers": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "baseUrl": "./",
        "declaration": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
